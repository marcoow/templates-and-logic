<div class="menu">
  <ul>
    <li>
      {{#link-to 'index' (query-params filter='active')}}
        Active Users
      {{/link-to}}
    </li>
    <li>
      {{#link-to 'index' (query-params filter='inactive')}}
        Inactive Users
      {{/link-to}}
    </li>
    <li>
      {{#link-to 'index' (query-params filter='senior')}}
        Senior Users
      {{/link-to}}
    </li>
  </ul>
</div>
<div class="content">  
  <div class="in-template-logic">
    <h1>Logic in templates</h1>
    <h2>Users</h2>
    <ul>
      {{#each (filter-by model filterProperty true) as |user|}}
        <li>
          {{template-based-user-tile user=user}}
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="in-template-context-logic">
    <h1>Logic in template context</h1>
    <h2>Users</h2>
    <ul>
      {{#each users as |user|}}
        <li>
          {{context-based-user-tile user=user}}
        </li>
      {{/each}}
    </ul>
  </div>
</div>